<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="project.springmarket.mybatis.ProductMapper">

    <resultMap id="products" type="project.springmarket.model.product.Product">
        <result column="product_no" property="productNo"/>
        <result column="seller_no" property="sellerNo"/>
        <result column="buyer_no" property="buyerNo"/>
        <result column="product_name" property="productName"/>
        <result column="description" property="description"/>
        <result column="product_images" property="ProductImages"/>
        <result column="category_no" property="category"/>
        <result column="product_status" property="productStatus"/>
        <result column="address_no" property="addressNo"/>
    </resultMap>
    <select id="findProducts" resultMap="products">
        select *
        FROM product
        WHERE address_no = #{addressNo}
    </select>

</mapper>